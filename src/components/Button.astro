---
interface Props {
  href?: string;
  type?: "button" | "submit" | "reset";
  className?: string;
  variant?: "primary" | "secondary";
}

const { href, type = "button", className = "", variant = "primary" } = Astro.props;

// "Buttons (CTA's): Volledig afgeronde hoeken (rounded-full or pill-shape).
// Geef ze een royale padding (px-8 py-4) en een zeer zachte, diffuse schaduw
// in een warme tint (geen harde grijze schaduwen)."
// "Transitiesnelheid: Traag, kalm en vloeiend. Gebruik 300ms ease-in-out voor alle hover-effecten...
// subtiele 'fade-in' of een zachte lift (-translate-y-1) bij het hoveren"

const baseStyles = "inline-flex justify-center items-center text-center font-heading font-medium rounded-full px-8 py-4 transition-all duration-300 ease-in-out hover:-translate-y-1";

const variants = {
  primary: "bg-[var(--color-brand-accent)] hover:bg-[var(--color-brand-accent-hover)] text-white shadow-lg shadow-[var(--color-brand-accent)]/25 hover:shadow-xl hover:shadow-[var(--color-brand-accent)]/30",
  secondary: "bg-[var(--color-brand-secondary)] hover:bg-[#D5C2B9] text-[var(--color-brand-primary-text)] shadow-sm hover:shadow-md",
};

const classes = `${baseStyles} ${variants[variant]} ${className}`;
---

{
  href ? (
    <a href={href} class={classes}>
      <slot />
    </a>
  ) : (
    <button type={type} class={classes}>
      <slot />
    </button>
  )
}
