---
import Button from './Button.astro';
import { Image } from 'astro:assets';
import foto1 from '../assets/images/foto_1.jpg';
---

{/* SECTIE 1 - HERO */}
<section id="hero" class="relative pt-24 pb-16 md:pt-40 md:pb-32 px-6 lg:px-8 max-w-7xl mx-auto flex flex-col-reverse lg:flex-row items-center gap-12 lg:gap-0">
	<div class="w-full lg:w-[55%] relative z-20 text-center lg:text-left mt-8 lg:mt-0 lg:-mr-16 xl:-mr-24 bg-white/40 lg:bg-transparent backdrop-blur-md lg:backdrop-blur-none p-6 lg:p-0 rounded-3xl lg:rounded-none">
		<div class="inline-block px-4 py-2 rounded-full bg-white/80 backdrop-blur-md border border-white mb-6 text-xs md:text-sm font-semibold tracking-widest uppercase text-[var(--color-brand-accent)] shadow-sm">
			Inzicht in je gezondheid
		</div>
		<h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-[4.5rem] xl:text-7xl font-bold mb-6 text-[var(--color-brand-primary-text)] leading-none md:leading-[1.05] tracking-tight drop-shadow-sm">
			Er is een reden <br class="hidden sm:block" />waarom je <span class="text-[var(--color-brand-accent)] relative inline-block">lichaam</span> dit doet.
		</h1>
		<p class="text-lg sm:text-xl md:text-2xl text-[var(--color-brand-muted)] mb-8 md:mb-10 max-w-xl mx-auto lg:mx-0 leading-relaxed">
			Ik help je die reden te vinden â€” en er iets mee te doen.
		</p>
		<div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
			<Button href="#kennismaking" className="text-base md:text-lg px-8 py-4 md:px-10 md:py-5 w-full sm:w-auto">
				Plan een kennismakingsgesprek
			</Button>
			<Button variant="secondary" href="#aanpak" className="text-base md:text-lg px-8 py-4 md:px-10 md:py-5 w-full sm:w-auto bg-transparent border-2 border-[var(--color-brand-secondary)] hover:bg-[var(--color-brand-secondary)] shadow-none">
				Ontdek de aanpak
			</Button>
		</div>
	</div>
	<div class="w-full lg:w-[50%] relative z-10">
		{/* Large Hero Image */}
		<div class="relative w-full max-w-md mx-auto aspect-[4/5] md:aspect-square lg:aspect-[4/5]">
			<div class="absolute inset-0 bg-gradient-to-tr from-[#E8D1C5] to-[#fdfbf9] rounded-tl-[6rem] rounded-br-[6rem] rounded-tr-3xl rounded-bl-3xl shadow-xl shadow-[var(--color-brand-accent)]/20 transform rotate-[-2deg] transition-transform duration-700 hover:rotate-0"></div>
			
			{/* Foto 1 - The main heroic photo */}
			<Image src={foto1} alt="Crystal GNM begeleiding" class="absolute inset-0 w-full h-full object-cover rounded-tl-[6rem] rounded-br-[6rem] rounded-tr-3xl rounded-bl-3xl shadow-[0_20px_50px_-15px_rgba(200,102,77,0.4)]" style="object-position: center 20%;" fetchpriority="high" loading="eager" />
			
			{/* Floating Card - Hidden on very small screens, small on mobile, larger on md */}
			<div class="hidden sm:block absolute -bottom-6 -left-4 md:-left-12 lg:-left-16 bg-white/80 backdrop-blur-md border border-white p-4 md:p-6 rounded-2xl md:rounded-3xl shadow-xl shadow-[var(--color-brand-muted)]/10 w-[240px] md:w-[280px]">
				<div class="flex items-center gap-3 md:gap-4 mb-2">
					<div class="w-8 h-8 md:w-10 md:h-10 rounded-full bg-[var(--color-brand-sage)] flex items-center justify-center text-[var(--color-brand-primary-text)] font-semibold text-sm md:text-base">C</div>
					<div>
						<p class="font-bold text-xs md:text-sm text-[var(--color-brand-primary-text)]">Crystal Helder</p>
						<p class="text-[10px] md:text-xs text-[var(--color-brand-muted)]">GNM Begeleider</p>
					</div>
				</div>
				<p class="text-xs md:text-sm italic text-[var(--color-brand-primary-text)]">"Samen vertalen we de taal van je lichaam."</p>
			</div>
		</div>
	</div>
</section>
