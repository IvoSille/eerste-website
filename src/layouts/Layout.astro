---
import '../styles/global.css';

interface Props {
	title: string;
	description?: string;
}

const { title, description = "Persoonlijke GNM-Begeleiding door Crystal." } = Astro.props;
---

<!doctype html>
<html lang="nl">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Google Fonts: Outfit (Headings) & Lato (Body) -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&family=Outfit:wght@500;600;700&display=swap" rel="stylesheet">
		
		<title>{title}</title>
	</head>
	<body class="bg-[var(--color-brand-base)] text-[var(--color-brand-primary-text)] antialiased font-sans text-lg selection:bg-[var(--color-brand-accent)] selection:text-white">
		<slot />
	</body>
</html>
